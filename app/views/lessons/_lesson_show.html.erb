<div class="flex-space-between shell-border shell-tab">
  <div class="flex-25">
    <% if element.appointments.size < element.lesson_capacity %>
    <!-- cant compare 0 : nil -->
      <h5><%= element.lesson_section %></h5>
      <a href="" data-toggle="modal" data-target="#lesson-form-<%= element.id %>">
        <h6><b>Sign Up!</b></h6>
        <% unless @consultation.consult_period == 'hourly' %>
        <!-- ^executes unless condition is true-->
          <!-- hides lesson capacity if hourly-->
          <h6> seats left: <%= element.lesson_capacity - element.appointments.size %></h6>
        <% end %>
      </a><!--end of appointment MODAL link-->
    <% else %>
      <h6>section closed</h6>
    <% end %><!--end of lesson size vs capacity-->
    <% if policy(@consultation).destroy? %>
      <div class=""><%= link_to lesson_path(element), method: :delete do %>
        <i class="fas fa-trash-alt" aria-hidden="true"></i><% end %>
      </div>
    <% end %><!--end of policy-->
  </div><!--end of flex 25-->
  <div class="flex-25"><h6><%= element.lesson_level %></h6></div>
  <% if @consultation.consult_period == 'hourly' %>
    <div class="flex-25"><h6>hourly</h6><h6><%= element.lesson_start.strftime('%I:%M: %p') %></h6><h6><%= element.lesson_max_dur %>&nbsp;mins max</h6></div>
  <% else %>
    <div class="flex-25"><h6><%= element.lesson_start.strftime('%I:%M %p')%> - <%= element.lesson_end.strftime('%I:%M %p')%></h6></div>
  <% end %>
  <div class="flex-25 center-text"> <!-- lesson days -->
    <% element.lesson_dow.shift %>
    <!-- ^ 'shift' drops the first default black space in lessons_dow array-->
    <% element.lesson_dow.each do |d| %>
      <div class="center-text"><h6><%= d %>&nbsp;</h6></div>
    <% end %><!--end lesson_dow.each-->
    <div class="center-text">
      <%= link_to lesson_path(element) do %>
        <i class="fas fa-info-circle" aria-hidden="true"></i>
      <% end %>
    </div>
  </div><!-- end of lesson days -->
</div><!--end of flex-space-between shell-tab shell-border-->

