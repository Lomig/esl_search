<div class="center-div padding mw600">
  <div class="shell-sign-in wrapper">
    <div class="inline-block">
      <div class="flex-center-center">
        <div class="padding">
        <h2><%= t(".title", resource: resource.model_name.human) %></h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <p><%= t('global.label.fname') %><span class="red-text">&#42;</span></p>
            <%= f.input :fname, label: false, error: 'first name is mandatory, please specify one', required: true, autofocus: true %>
            <p><%= t('global.label.username') %><span class="red-text">&#42;</span></p>
            <%= f.input :username, label: false, autofocus: true %>
            <p><%= t('global.label.city') %><span class="red-text">&#42;</span></p>
            <%= f.input :city, label: false, error: 'your city name is mandatory, please specify one', required: true, autofocus: true %>
            <p><%= t('global.label.user_native_lang') %><span class="red-text">&#42;</span></p>
            <%= f.input :user_native_lang, label: false, collection: [[t('global.en'), t('global.en')], [t('global.kr'), t('global.kr')], [t('global.jp'), t('global.jp')],[t('global.sp'), t('global.sp')], [t('global.fr'), t('global.fr')], [t('global.ch'), t('global.ch')], [t('global.vt'), t('global.vt')], [t('global.rus'), t('global.rus')]], error: 'your native language is required, please specify one', required: true, autofocus: true %>
            <p><%= t('global.label.user_second_lang') %></p>
            <%= f.input :user_second_lang, label: false, collection: [[t('global.en'), t('global.en')], [t('global.kr'), t('global.kr')], [t('global.jp'), t('global.jp')],[t('global.sp'), t('global.sp')], [t('global.fr'), t('global.fr')], [t('global.ch'), t('global.ch')], [t('global.vt'), t('global.vt')], [t('global.rus'), t('global.rus')]], error: 'your native language is required, please specify one', required: true, autofocus: true %>
            <p><%= t('global.label.gender') %></p>
            <%= f.input :gender, label: false, collection: [[t("global.male"),t("global.male")],[t("global.female"),t("global.female")]], error: 'your gender is mandatory, please specify one', required: true, autofocus: true %>
            <p><%= t('global.label.address') %></p>
            <%= f.input :address, label:false, autofocus: true %>
            <p><%= t('global.label.user_phone') %></p>
            <%= f.input :user_phone, label: false, error: 'mobile number', autofocus: true %>
            <p><%= t('global.label.user_kakao_id') %></p>
            <%= f.input :user_kakao_id, label: false, error: 'please enter kakao id', autofocus: true %>
            <div class="instructor-registration">
              <p><%= t('global.label.edu') %></p>
              <%= f.input :edu, label: false, autofocus: true  %>
              <p><%= t('global.label.subjectmajor') %></p>
              <%= f.input :subjectmajor, label: false, autofocus: true %>
              <p><%= t('global.label.edulevel') %></p>
              <%= f.input :edulevel, label: false, collection: [[t('global.assoc'), t('global.assoc')],[t('global.bach'), t('global.bach')],[t('global.master'), t('global.master')],[t('global.doc'), t('global.doc')]], error: 'please specify the highest education attained', autofocus: true %>
            </div>
            <div class="aboutyou">
              <p><%= t('global.label.aboutme') %></p>
              <%= f.input :aboutme, label: false, placeholder: "tell us about yourself!", as: :text %>
            </div>
            <div class="shell-tab-header grey-shell-gradient">
              <%= f.input :photo, label: "Upload Avatar" %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
            <% end %>

            <%= f.input :password,
                        hint: t(".leave_blank_if_you_don_t_want_to_change_it"),
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        hint: t(".we_need_your_current_password_to_confirm_your_changes"),
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, t(".update") %>
          </div>
        <% end %>

        <h3><%= t(".cancel_my_account") %></h3>

        <p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

        <%= link_to t("devise.shared.links.back"), :back %>
      </div>
    </div>
  </div>
</div>
