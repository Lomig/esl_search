                  <!-- http://localhost:3000/consultations/lang_loc?consult_language=English -->
                  <h3><%= clang_link %></h3>
                </div><!--end white card1 center-text-->
              <% end %><!--end of link-->
            </div><!--col-xs-6 col-sm-6-->
          <% end %><!--end of clang_link-->
        </div><!--row-->
      </div><!--container-->
    </div>
  </div>
</div>
