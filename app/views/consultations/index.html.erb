<h6><%= link_to "homepage", root_path %></h6>
<h6 class=""><%= link_to "dashboard", dashboard_path %></h6>
<div class="flex-center-center text-center div-center">
  <h1 class="text-center">Consultations</h1>
</div>
<div class="content-grid element-index-area">
  <div class="element-index-shell shell-border padding">
    <div class="flex-space-between grey-shell-gradient padding">
      <div class="flex-item-no-grow-shrink-30"><h6>INSTRUCTOR</h6></div>
      <div class="flex-item-grow-only-auto"><h6>INFO</h6></div>
      <div class="flex-item-no-grow-shrink-20"><h6>RATE</h6></div>
    </div>
    <% @consultations.each do |consult| %>
      <div class="flex-space-between padding">
        <%= link_to user_path(consult.user) do %>
          <div class="flex-item-no-grow-shrink-30">
            <% avatar_url = consult.user.photo.url(:bright_face) || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon_arl6kj.png" %>
            <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
            <div class="user-sm-profile-image-img icon-shell icon-shell" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 45px; width: 45px; border-radius: 50%; background-position: center;"></div>
            <h6><b><%= consult.user.fname %></b></h6>
          </div><!--end of icon-->
        <% end %><!--end of user_path link-->
        <%= link_to consultation_path(consult) do %>
        <div class="flex-item-grow-only-auto"><!--shell-->
          <div class=""><h5><%= consult.consult_title %></h5></div>
          <div class=""><h6><%= consult.consult_language %></h6></div>
          <div class=""><h6><%= consult.consult_location %></h6></div>
          <div class=""><h6><%= consult.consult_period %></h6></div>
          <div class= "">
            <% @avg_star.to_i.times do %>
              <i class="fa fa-star yellow-star"></i><!--reference 'components/_reviewstars.scss'-->
            <% end %><!--end of r.star-->
              <% (5 - @avg_star.to_i).times do %>
              <i class="fa fa-star grey-star"></i><!--reference 'components/_reviewstars.scss'-->
            <% end %><!--end of 5-r.star-->
          </div><!--end of review-item-->
        </div><!--shell-->
        <% end %>
        <!-- :unit is built into the number_to_currency-->
        <!-- consult[:consultfee] -->
        <div class="flex-item-no-grow-shrink-20 btn btn-primary">
          <h6><%= number_to_currency(consult[:consultfee], :unit => "â‚©")%></h6>
        </div>
      </div><!--end of index-consult-items-->
      <hr>
    <% end %><!--end of @consultations.each do-->
  </div><!-- end of consultations-index-shell-->
</div><!--end of consult-index-area-->
