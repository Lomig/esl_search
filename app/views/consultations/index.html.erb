<h6><%= link_to "homepage", root_path %></h6>
<h6 class=""><%= link_to "dashboard", dashboard_path %></h6>
<div class="flex-center-center text-center div-center">
  <h1 class="text-center">Consultations</h1>
</div>
<div class="content-grid consult-index-area">
  <div class="consult-index-shell shell-border grey-shell-gradient">
    <% @consultations.each do |consult| %>
      <div class="flex-space-between shell-tab">
        <%= link_to user_path(consult.user) do %>
          <div class="">
            <%= image_tag consult.user.photo.url(:bright_face), class: "user-sm-profile-image-img icon-shell"%>
          </div>
        <% end %><!--end of user_path link-->
        <%= link_to consultation_path(consult) do %>
        <div class=""><!--shell-->
          <div class=""><h5><%= consult.consult_title %></h5></div>
          <div class=""><h6><%= consult.consult_language %></h6></div>
          <div class=""><h6><%= consult.consult_location %></h6></div>
          <div class= "">
            <% @avg_star.to_i.times do %>
              <i class="fa fa-star yellow-star"></i><!--reference 'components/_reviewstars.scss'-->
            <% end %><!--end of r.star-->
              <% (5 - @avg_star.to_i).times do %>
              <i class="fa fa-star grey-star"></i><!--reference 'components/_reviewstars.scss'-->
            <% end %><!--end of 5-r.star-->
          </div><!--end of review-item-->
        </div><!--shell-->
        <% end %>
        <!-- :unit is built into the number_to_currency-->
        <!-- consult[:consultfee] -->
        <div class="">
          <h6><%= consult.consult_period %></h6>
          <h6><%= number_to_currency(consult[:consultfee], :unit => "â‚©")%></h6>
        </div>
        <div class="">
          <% if policy(consult).destroy? %><!--only owner can see delete button-->
            <%= link_to consultation_path(consult), method: :delete do %>
             <i class="far fa-trash-alt"></i>
            <% end %><!--end of link-->
          <% end %><!-- end of if statment-->
        </div>
      </div><!--end of index-consult-items shell-tab-->
    <% end %><!--end of @consultations.each do-->
  </div><!-- end of consultations-index-shell-->
</div><!--end of consult-index-area-->
