<!--minified version for dashboard-->
<%= link_to appointment_path(element) do %>
  <div class="flex-space-between shell-tab grey-tab-gradient">
    <div class="flex-item-no-grow-shrink-30">
      <% avatar_url = element.user.photo.url(:bright_face) || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon_arl6kj.png" %>
      <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
      <div class="user-sm-profile-image-img icon-shell icon-shell" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 45px; width: 45px; border-radius: 50%; background-position: center;"></div>
    </div><!--end of icon-div-->
    <div class="flex-item-grow-only-auto">
      <% if element.consultation.consult_period == 'hourly'%>
        <h6><%= element.consultation.consult_period %></h6>
      <% else %>
        <h6><%= element.lesson.lesson_start.strftime('%m/%d (MM/DD) @ %I:%M %p')%></h6>
      <% end %>
        <h6><%= element.consultation.consult_title %></h6>
    </div>
  </div><!--end of shell-tab-->
<% end %><!--end link_to appointments-->
