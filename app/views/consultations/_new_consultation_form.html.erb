<!--this should be in a partial-->
<div class="grid-area new-consult-form mw800 center-div shell-border">
  <h3>Consultations#new</h3>
  <%= link_to "dashboard", dashboard_path %>
  <p>Find me in app/views/consultations/_new_consultation_form.html.erb</p>
  <div class="consultaiton-form-div">
    <%= simple_form_for @consultation do |f| %>
      <%= f.input :consult_title, label: false, placeholder: "lesson title" %>
      <%= f.input :consult_language, label: false, collection: ["English", "Hangul", "Japanese", "Spanish", "French", "Chinese", "Vietnamese"], prompt: "language" %>
      <%= f.input :consult_type, label: false, collection: ["grammar-based", "skill-based", "hobby-based", "trade-based", "conversation (only)", "exam-prep"], prompt: "type" %>
      <%= f.input :consult_focus, label: false, placeholder: "specific focus" %>
      <%= f.input :consult_location, label: false, placeholder: "city"%>
      <%= f.input :consultfee, label: false, placeholder: "consultation fee" %>
      <%= f.input :consult_period, label: false, collection: ["one-time", "monthly", "3 months", "6 months", "one-year", "custom"], prompt: "set period" %>

      <div>
        <%= f.input :consult_freq, label: "frequency", as: :check_boxes, collection: [["monday", "monday"], ["tuesday", "tuesday"]] %>
      </div>

      <%= f.input_field :matincluded, label: "materials included?", as: :boolean, boolean_style: :inline %>
      <%= f.input :consult_desc, label: false, placeholder: "description", as: :text %>
      <div class="consultation-button-div flex flex-center">
        <%= f.button :submit, "create consultation", class: "btn btn-primary no-decor btn-grad-light light-shadow" %>
      </div><!-- end of consultation-button-div -->
    <% end %><!--end of form-->
  </div><!--end of consultaiton-form-div-->
</div>
