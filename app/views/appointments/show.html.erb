<div class="content-grid appoint-show-area">
  <div class="appoint-show-links-shell">
    <h6><%= link_to "homepage", root_path %></h6>
    <h6><%= link_to "dashboard", dashboard_path %></h6>
  </div><!--end apppointment-show-links-shell-->
  <!-- <div class="appointment-show-div"> -->
    <div class="appoint-show-title-shell center-text">
      <h1><%= link_to @appointment.consultation.consult_title, consultation_path(@appointment.consultation.id) %></h1>
    </div>
  <div class="appoint-show-instructor-shell shell-border turcoise-shell-gradient" >
    <h3 class="appoint-show-role-head center-text">Instructor</h3>
    <div class="user-profile-image-div">
      <% avatar_url = @appointment.consultation.user.photo.url(:bright_face) || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon_arl6kj.png" %>
        <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
      <div class="user-large-profile-image-img shell-tab" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 180px; width: 180px; border-radius: 50%; background-position: center;"></div>
    </div><!--end of user-profile-image-div-->
    <h4 class="center-text"><%= @appointment.consultation.user.fname %> </h4>
    <h6 class="center-text"><%= @appointment.consultation.user.email %></h6>
  </div><!--end appointment-show-instructor-shell-->

  <div class="appoint-show-client-shell shell-border green-shell-gradient">
    <h3 class="appoint-show-role-head center-text">Client</h3>
    <div class="user-profile-image-div">
      <% avatar_url = @appointment.user.photo.url(:bright_face) || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon_arl6kj.png" %>
          <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
      <div class="user-large-profile-image-img shell-tab" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 180px; width: 180px; border-radius: 50%; background-position: center;"></div>
    </div><!--end of user-profile-image-div find: _usericon.scss-->
    <h4 class="center-text"> <%= @appointment.pupil %></h4>
    <h6 class="center-text"><%= @appointment.user.email %></h6>
  </div><!--end appointment-show-client-shell-->

  <div class="appoint-show-details-shell center-text shell-border grey-shell-gradient">
    <div class="padding-5">
      <h3 class="appoint-show-role-head center-text">Detail</h3>
      <h5><%= @appointment.consultation.consult_language %></h5>
      <div class="flex-space-between">
        <h6 class="">location</h6>
        <h6 class=""><%= @appointment.consultation.consult_location %></h6>
      </div>
      <div class="flex-space-between">
        <h6 class="">type</h6>
        <h6 class=""><%= @appointment.consultation.consult_type %></h6>
      </div>
      <div class="flex-space-between">
        <h6 class="">focus</h6>
        <h6 class=""><%= @appointment.consultation.consult_focus %> </h6>
      </div>
      <div class="flex-space-between">
        <h6 class="">fee</h6>
        <h6 class=""><%= @appointment.consultation.consultfee%></h6>
      </div>
      <div class="flex-space-between">
        <h6 class="">start</h6>
        <h6 class="flex-item-grow-only-auto"><%= @appointment.lesson.lesson_start.strftime('%B %d, %Y @ %I:%M%p') %></h6>
      </div>
      <div class="flex-space-between">
        <h6 class="">end</h6>
        <h6 class="flex-item-grow-only-auto"><%= @appointment.lesson.lesson_end.strftime('%B %d, %Y @ %I:%M%p') %></h6>
      </div>
    </div><!--end appointment-show-details-shell-->
    <!-- </div>end appointment-show-div -->
  </div>
</div><!--end content-grid appoint-show-area-->
